<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.TicTacToe.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:minHeight">@dimen/min_text_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="Widget.TicTacToe.BoardButtonView" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">?android:attr/windowTitleSize</item>
    </style>

</resources>